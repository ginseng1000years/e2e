{
  "name": "bdd-playwright-framework",
  "version": "1.0.0",
  "scripts": {
    "test": "cucumber-js",
    "test:headed": "cucumber-js --world-parameters '{\"headless\": false}'",
    "test:timed": "ts-node timed-test.ts",
    "generate-report": "node generate-cucumber-report.js",
    "clean:reports": "rimraf ./reports ./cucumber-html-report",
    "test:with-report": "npm run clean:reports && npx cucumber-js --format json:./reports/cucumber-report.json && npm run generate-report"
  },
  "dependencies": {
    "@cucumber/cucumber": "^9.0.0",
    "dotenv": "^16.5.0",
    "playwright": "^1.44.0",
    "ts-node": "^10.9.1",
    "typescript": "^5.0.0"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "multiple-cucumber-html-reporter": "^3.9.2",
    "rimraf": "^6.0.1"
  }
}
