{
  "compilerOptions": {
    "target": "ESNext",
    "module": "commonjs",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "moduleResolution": "node",
    "types": ["node", "playwright/test"],
    "resolveJsonModule": true,
    "outDir": "dist"
  },
  "include": ["features/**/*.ts", "pages/**/*.ts", "support/**/*.ts"]
}